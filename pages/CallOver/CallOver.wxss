/* pages/CallOver/CallOver.wxss */
page{
  background: #f4f4f4;
}
.header{
  text-align: center;
  font-size: 50rpx;
  margin-top: 30rpx;
}
.sectionContainer{
  background: #fff;
}
.section{
  height: 100rpx;
  border: solid#f00; 
  border-radius: 40rpx;
  text-align: center;
  width: 90%;
  margin: 5%;
}
.buttonlist{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
}
.student-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  background-color: gray;
}
.student-item {
  margin: 10rpx;
}
.randomCall{
  position: center;
  height: 300rpx;
  font-size: 70rpx;
  text-align: center;
  margin-top: 30rpx;
  background-image: url('http://pic.qiantucdn.com/10/18/95/88bOOOPIC3e.jpg!qt780');
  background-size: 100% 100%;
}
.callboxContainer{
  background: #fff;
}
.callbox{
  margin: 50rpx;
}
.picker{
  margin-bottom: 30rpx;
  background: #fff;
}
.type-icon{
  height: 36rpx;
  width: 36rpx;
}
.placeholderStyle{
  text-align: center;
  font-size: 40rpx;
}
.this-button {
  width: 40%;
  height: 94rpx;       
  color: rgb(255, 255, 255);
  text-align: center;
  padding-top: 5rpx;
  vertical-align: middle;
  font-size: 32rpx;
  background-color:  #1D77FE;
  border-radius: 50rpx
} 
.start-button {
  width: 40%;
  height: 94rpx;       
  color: rgb(255, 255, 255);
  text-align: center;
  padding-top: 5rpx;
  vertical-align: middle;
  font-size: 32rpx;
  background-color:  #f00;
  border-radius: 50rpx
} 
.banner{
  display: block;
  width: 100%;
  height: 250rpx;
}
.callName{
  font-family: kaiti;
  font-weight: 500;
  color:rgb(3, 40, 97);
}