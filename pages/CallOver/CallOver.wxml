<!--pages/CallOver/CallOver.wxml-->
<view class='header'>
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{classarray}}">
    <view class="picker">
      当前选择：{{classarray[index]}}
    </view>
  </picker>
</view>
<view class='header'>
  添加学生
</view>

<view class='section'>
  <textarea auto-height value='{{inputValue}}' bindinput='getInput' placeholder="请输入学生姓名" />
</view>

<view class='buttonlist'>
  <button bindtap='resetbox'>
    重置
  </button>
  <button bindtap='insert'>
    添加
  </button>
</view>

<view class='callbox'>
  <view class='header'>
    开始点名
  </view>
  <view class='randomCall'>
    <text>
      {{random+1}}.{{classmates[random]}}
    </text>
  </view>
  
  <view class='buttonlist'>
    <button bindtap='start'> 
      开始
    </button>
    <button bindtap='clear'> 
      清空学生
    </button>
  </view>
</view>

<scroll-view scroll-y style="height: 200px;">
  <view class='student-list'>
    <text> 学生信息：</text>
    <block wx:for="{{classmates}}" wx:for-item="student">
    <!--wx:for-item="log"的意思是指定item名字为student-->
      <text class="student-item">{{index + 1}}. {{student}}</text>
    </block>
  </view>
</scroll-view>  